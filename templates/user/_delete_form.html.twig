    <input type="hidden" name="_method" value="DELETE">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
    {% if is_granted('ROLE_SUPER_ADMIN') %}<a class="btn btn-primary" href="{{ path('category_delete', {'id': category.id}) }}"><i class="fas fa-trash-alt"></i> {% trans %}delete{% endtrans %}</a>{% endif %}
</form>
