{% extends 'base.html.twig' %}

{% block title %}Question{% endblock %}

{% block body %}
    <h1>Question</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ question.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Text{% endtrans %}</th>
                <td>{{ question.text }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('question_index') }}">{% trans %}back to list{% endtrans %}</a>

    <a class="btn btn-primary" href="{{ path('question_edit', {'id': question.id}) }}">{% trans %}edit{% endtrans %}</a>

    {{ include('question/_delete_form.html.twig') }}
{% endblock %}
