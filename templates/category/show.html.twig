{% extends 'base.html.twig' %}

{% block title %}Category{% endblock %}

{% block body %}
    <h1>{% trans %}Category{% endtrans %}</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>{% trans %}Id{% endtrans %}</th>
                <td>{{ category.id }}</td>
            </tr>
            <tr>
                <th>{% trans %}Shortname{% endtrans %}</th>
                <td>{{ category.shortname }}</td>
            </tr>
            <tr>
                <th>{% trans %}Longname{% endtrans %}</th>
                <td>{{ category.longname }}</td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-primary" href="{{ path('category_index') }}">{% trans %}back to list{% endtrans %}</a>

    {% if is_granted('ROLE_ADMIN') %}<a class="btn btn-primary" href="{{ path('category_edit', {'id': category.id}) }}">{% trans %}edit{% endtrans %}</a>{% endif %}

    {{ include('category/_delete_form.html.twig') }}
{% endblock %}
